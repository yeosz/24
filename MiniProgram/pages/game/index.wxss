.v-text {
    margin-top: 20%;
    font-size: 4em;
    text-align: center;
    color: #f44;
}

.v-main {
    width: 100%;
    position: fixed;
    bottom: 0;
}

.v-express {
    padding: 10px 0;
    text-align: center;
    background-color: #dcdcdc;
}

.express-1 {
    text-align: center;
    height: 45px;
    line-height: 45px;
}

.express-1-input {
    text-align: center;
    display: inline-block;
    width: 75%;
    height: 100%;
}

.express-1-input input {
    text-align: center;
    margin: 0 5px 0 10px;
    height: 100%;
    background-color: #fff;
}

.express-1-btn {
    display: inline-block;
    width: 25%;
    height: 100%;
    vertical-align: top;
}

.express-1-btn button {
    height: 100%;
    text-align: center;
    margin: 0 10px 0 5px;
    background-color: #f44;
    font-size: 12px;
    color: #fff;
    line-height: 45px;
}

.v-operator {
    background-color: #dcdcdc;
}

.v-operator button {
    font-size: 36px;
    color: black;
    display: inline-block;
    width: 100%;
    border: none;
    border-radius: none;
    padding: 0;
    margin: 0;
}

.v-operator button::after {
    border: none;
    border-radius: none;
    padding: 0;
    margin: 0;
}

.b-submit>view, .b-submit button {
    background-color: #f44;
    color: #fff;
}

.b-number>view, .b-number button {
    background-color: #dfdfdf;
    color: #fff;
}

.b-number-used {
    color: #dfdfdf !important;
}

.b-operator>view, .b-operator button {
    background-color: #dcdcdc;
    color: grey;
}
.b-operator-hover{
     background-color: #dfdfdf !important;
}
.b-number-hover{
     background-color: #dcdcdc !important;
}